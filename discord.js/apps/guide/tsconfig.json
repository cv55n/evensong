{
    "$schema": "https://json.schemastore.org/tsconfig.json",

    "extends": "../../tsconfig.json",

    "compilerOptions": {
        // módulos
        "baseUrl": ".",

        // emit
        "declaration": false,
        "declarationMap": false,
        "noEmit": true,
        "outDir": "dist",

        // restrições de interoperabilidade
        "esModuleInterop": true,
        "allowJs": true,
        "incremental": true,
        "skipLibCheck": true,

        // linguagem e ambiente
        "jsx": "preserve",

        "lib": [
            "ESNext", "DOM", "DOM.Iterable"
        ],

        "plugins": [
            {
                "name": "next"
            }
        ],

        "paths": {
            "@/*": ["./src/*"]
        }
    },

    "include": [
        "src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.js",
		"src/**/*.jsx",
		"src/**/*.cjs",
		"src/**/*.mjs",
		"next-env.d.ts",
		".next/types/**/*.ts",
		"vitest.shims.d.ts",
		"__tests__/**/*.ts",
		"__tests__/**/*.tsx"
    ],

    "exclude": [
        "node_modules"
    ]
}