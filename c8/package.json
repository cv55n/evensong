{
  "name": "c8",
  "version": "10.1.3",
  "description": "gera relatórios de cobertura usando a função de cobertura integrada do node.js",
  "main": "./index.js",
  "types": "./index.d.ts",
  "bin": "./bin/c8.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:cv55n/evensong.git"
  },
  "scripts": {
    "test": "cross-env TS_NODE_SKIP_PROJECT=true node ./bin/c8.js mocha --timeout=10000 ./test/*.js",
    "coverage": "cross-env TS_NODE_SKIP_PROJECT=true node ./bin/c8.js --check-coverage mocha --timeout=10000 ./test/*.js",
    "test:snap": "cross-env CHAI_JEST_SNAPSHOT_UPDATE_ALL=true npm test",
    "fix": "standard --fix",
    "posttest": "standard"
  },
  "standard": {
    "ignore": [
      "test/fixtures"
    ]
  },
  "keywords": [
    "coverage",
    "v8",
    "test",
    "istanbul",
    "profiler",
    "inspector",
    "node"
  ],
  "author": {
    "name": "cavassani",
    "url": "https://cv55n.github.io"
  },
  "license": "ISC",
  "dependencies": {
    "@bcoe/v8-coverage": "^1.0.2",
    "@istanbuljs/schema": "^0.1.3",
    "find-up": "^8.0.0",
    "foreground-child": "^3.3.1",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.2.0",
    "test-exclude": "^7.0.1",
    "v8-to-istanbul": "^9.3.0",
    "yargs": "^18.0.0",
    "yargs-parser": "^22.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "chai": "^6.2.1",
    "chai-jest-snapshot": "^2.0.0",
    "cross-env": "^10.1.0",
    "mocha": "^11.7.5",
    "standard": "^17.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "monocart-coverage-reports": "^2.12.9"
  },
  "peerDependenciesMeta": {
    "monocart-coverage-reports": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "lib",
    "bin"
  ]
}
