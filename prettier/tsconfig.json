{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,

        "target": "esnext",
        "module": "nodenext",

        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,

        // ainda não foi definido, mas pretende-se habilitar a
        // verificação de tipos strict em algum momento

        "noImplicitAny": false,
        "strictNullChecks": false,

        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },

    "exclude": [
        "coverage/",
        "test*.*",
        "jest.config.js",

        // [a definir] fontes javascript *não* afetadas por
        // src/language-*:
        "src/main/ast-to-doc.js",
        "src/main/core.js",
        "src/config/resolve-config.js",
        "src/main/options-normalizer.js",
        "src/common/get-file-info.js",
        "src/main/multiparser.js",
        "src/main/options.js",
        
        "src/cli/index.js",
        "src/cli/expand-patterns.js",
        "src/cli/file-info.js",
        "src/cli/find-config-path.js",
        "src/cli/context.js",
        "src/cli/format.js",
        
        "src/cli/options/get-context-options.js",
        "src/cli/options/get-options-for-file.js",
        "src/cli/options/option-map.js",
        "src/cli/options/parse-cli-arguments.js",
        "src/cli/options/normalize-cli-options.js",
        
        "src/cli/usage.js",
        "src/cli/constant.js",
        "src/cli/prettier-internal.js",
        
        // [a definir] fontes javascript de nível superior
        // afetadas por problemas de jsdoc em outras fontes:

        "src/index.js",
        "src/standalone.js",
        "index.js",
        "src/index.cjs",
        "standalone.js",
        "bin/",
        "dist*/",
        "docs/",
        "scripts/",
        "tests/",
        "website/",
        "types/"
    ]
}