{
  "author": {
    "name": "cavassani",
    "url": "https://cv55n.github.io"
  },
  "name": "chai",
  "type": "module",
  "description": "biblioteca de asserções bdd/tdd para o node.js e navegadores. estrutura de teste independente.",
  "keywords": [
    "test",
    "assertion",
    "assert",
    "testing",
    "chai"
  ],
  "files": [
    "index.js",
    "register-*.js"
  ],
  "license": "MIT",
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/cv55n/evensong.git"
  },
  "bugs": {
    "url": "https://github.com/cv55n/evensong/issues"
  },
  "main": "./index.js",
  "scripts": {
    "build": "esbuild --bundle --format=esm --keep-names --outfile=index.js lib/chai.js",
    "prebuild": "npm run clean",
    "format": "prettier --write lib",
    "pretest": "npm run lint",
    "test": "npm run test-node && npm run test-chrome",
    "test-node": "c8 --99 --check-coverage mocha --require ./test/bootstrap/index.js test/*.js",
    "test-chrome": "web-test-runner --playwright",
    "lint": "npm run lint:js && npm run lint:format",
    "lint:js": "eslint lib/",
    "lint:format": "prettier --check lib",
    "lint:types": "tsc",
    "clean": "rm -rf index.js coverage/"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "assertion-error": "^2.0.1",
    "c8": "^10.1.3",
    "check-error": "^2.1.1",
    "deep-eql": "^5.0.2",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "eslint-plugin-jsdoc": "^61.1.7",
    "globals": "^16.4.0",
    "loupe": "^3.2.1",
    "mocha": "^11.7.4",
    "pathval": "^2.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
