{
    "compilerOptions": {
        "lib": [
            "ES2018"
        ],

        "module": "node16",
        "moduleResolution": "node16",

        "target": "es2018",

        "noEmit": true,

        // "declaration": true,
        // "emitDeclarationOnly": true,

        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "allowJs": true,
        "checkJs": true
    },

    "include": [
        "**/*.mjs",
        "**/*.cjs"
    ]
}